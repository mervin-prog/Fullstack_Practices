<%- include('partials/header') %>


<div class="container">
<div class="card">
<div class="modal-content rounded-4 shadow">
    <div class="modal-header p-5 pb-4 border-bottom-0">
      <h1 class="fw-bold mb-0 fs-2">Login</h1>
      
    </div>

    <div class="modal-body p-5 pt-0">
      <form action="/login" method="post">

        <div class="form-floating mb-3">
            <input type="text" class="form-control rounded-3" id="floatingInput" placeholder="" name="role" required> 
            <label for="floatingInput">Role</label>
        </div>

        <div class="form-floating mb-3">
          <input type="email" class="form-control rounded-3" id="floatingInput" placeholder="" name="email">
          <label for="floatingInput">Email</label>
        </div>

        <div class="form-floating mb-3">
          <input type="password" class="form-control rounded-3" id="floatingPassword" placeholder="" name="password">
          <label for="floatingPassword">Password</label>
        </div>
        <button type="submit">Login</button>
      </form>

      <form action="/forgot-password" method="post">
        <div class="form-floating mb-3">
          <input type="email" class="form-control rounded-3" id="floatingInput" placeholder="" name="email">
          <label for="floatingInput">Email</label>
        </div>
        <button type="submit">Forgot Password ?</button>
      </form>
    </div>
  </div>
  </div>
  </div>
 

  <%- include('partials/footer') %>